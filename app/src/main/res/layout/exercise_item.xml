<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/imgbutton_menu_background"
                android:src="@drawable/ic_exercise_item_menu"
                android:layout_alignParentRight="true"
                android:id="@+id/exerciseItemMenu"
                />
            <TextView
                android:id="@+id/txtSetName"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="24dp"
                android:text="Squat (Barbell)"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSetName"
                android:stretchColumns="3,4">

                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:gravity="left"
                        android:padding="8dp"
                        android:text="SET"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="2"
                        android:gravity="left"
                        android:padding="8dp"
                        android:text="PreviousMax"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="3"
                        android:layout_marginLeft="32dp"
                        android:width="90dp"
                        android:gravity="left"
                        android:text="WEIGHT"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="4"
                        android:width="90dp"
                        android:gravity="left"
                        android:text="REPS"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tableLayout"></androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/btnAddSet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="ADD SET"
                tools:visibility="visible"
                android:backgroundTint="@color/teal_700"
                android:layout_below="@+id/recViewSet"></Button>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>